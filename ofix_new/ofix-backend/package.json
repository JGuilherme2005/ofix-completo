{
  "name": "ofix-backend",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "description": "Backend para o sistema OFIX",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "postinstall": "prisma generate",
    "start": "npm run prisma:migrate && npm run seed:if-needed && node src/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "npm run prisma:generate && node scripts/prisma-migrate-safe.mjs",
    "prisma:migrate:strict": "npm run prisma:generate && prisma migrate deploy",
    "prisma:migrate:safe": "npm run prisma:migrate",
    "prisma:studio": "prisma studio",
    "seed": "npm run prisma:generate && prisma db seed",
    "seed:if-needed": "node scripts/seed-if-needed.mjs",
    "start:seed": "npm run prisma:generate && prisma db seed && node src/server.js",
    "test": "vitest run --config vitest.config.integration.js",
    "test:watch": "vitest --config vitest.config.integration.js"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "keywords": [
    "oficina",
    "gestao",
    "api",
    "express",
    "prisma"
  ],
  "author": "Seu Nome/Equipe OFIX",
  "license": "ISC",
  "dependencies": {
    "@huggingface/inference": "^4.7.1",
    "@prisma/client": "^6.19.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "form-data": "^4.0.4",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.7.0",
    "ollama": "^0.6.3",
    "openai": "^5.19.1",
    "pg": "^8.8.0",
    "redis": "^5.10.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "prisma": "^6.19.2",
    "sucrase": "^3.29.0",
    "supertest": "^7.2.2",
    "vitest": "^4.0.18"
  }
}
